    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cjmyles/instant-express-core.git"
  },
  "keywords": [
    "node",
    "express",
    "session",
    "routing",
    "auth",
    "api",
    "firebase"
